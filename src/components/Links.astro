---
import { Icon } from "astro-icon/components"

export interface Props {
	social: Array<{
		name: string
		url: string
		icon?: string
		pack?: string
	}>
}

const { social } = Astro.props as Props
---

<section>
	{social.map((item) => (
		<a href={item.url} title={item.name} aria-label={item.name}>
			<Icon name={`${item.pack || 'fa6-brands'}:${item.icon || item.name.toLowerCase()}`} />
			<p>{item.name}</p>
		</a>
	))}
</section>

<style>
	section {
		padding: 1rem;
		width: max-content;
		display: grid;
		grid-template-columns: max-content 1fr;
		gap: 1rem;

		a {
			padding: 0.15rem 6.5rem;
			border-radius: 10rem;
			background-color: rgba(0, 0, 0, 0.5);
			box-shadow: inset 0 0 0.3rem 0.1rem rgba(0, 0, 0, 0.5);
			backdrop-filter: blur(8px);
			display: grid;
			grid-template-columns: subgrid;
			grid-column: 1 / 3;
			align-items: center;
			color: white;
			text-decoration: none;
			text-align: left;
			transform: scale(1);
			transition: transform 180ms, box-shadow 180ms;
			font-size: 1.15em;

			svg {
				width: 1.7rem;
				height: 1.7rem;
				color: white;
			}

			&:hover {
				transform: scale(1.0);
				box-shadow: inset 0 0 0 0.1rem rgba(255, 255, 255, 0.7);
			}
		}
	}
</style>
