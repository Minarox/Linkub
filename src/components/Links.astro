---
import { Icon } from 'astro-icon/components';

export interface Props {
	social: Array<{
		name: string;
		url: string;
		icon?: string;
		pack?: string;
	}>;
	hoverColor: string;
}

const { social, hoverColor } = Astro.props;
---

<section>
	{social.map((item) => (
		<a href={item.url} title={item.name} aria-label={item.name}>
			<Icon name={`${item.pack || 'fa6-brands'}:${item.icon || item.name.toLowerCase()}`} />
			<p>{item.name}</p>
		</a>
	))}
</section>

<style lang="scss" define:vars={{ hoverColor }}>
	section {
		padding: 1rem;
		width: max-content;
		display: grid;
		grid-template-columns: max-content 1fr;
		gap: 1rem 1.2rem;

		a {
			padding: 0.2rem 6rem;
			border-radius: 10rem;
			background-color: rgba($color: #000000, $alpha: 0.5);
			box-shadow: inset 0 0 0.6rem 0.1rem rgba($color: #000000, $alpha: 0.9);
			backdrop-filter: blur(5px);
			display: grid;
			grid-template-columns: subgrid;
			grid-column: 1 / 3;
			align-items: center;
			color: white;
			text-decoration: none;
			text-align: left;
			transform: scale(1);
			transition: transform 220ms, box-shadow 220ms;

			svg {
				width: 1.7rem;
				height: 1.7rem;
			}

			&:hover {
				transform: scale(1.08);
				box-shadow: inset 0 0 0.6rem 0.1rem rgba($color: var(--hoverColor), $alpha: 0.9);
			}
		}
	}
</style>