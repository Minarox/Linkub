---
import { SEO } from "astro-seo";
import { AstroFont } from "astro-font";
import Logo from "@assets/astro.svg";
import Background from "@assets/background.svg";

const title: string = "Linkub";
const description: string = "All links in one place.";
const keywords: string = "Linkhub, Link, social media, hub, landing page, web";
const creator: string = "Minarox";
---

<!doctype html>
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">

		<SEO
			title={title}
			description={description}
			charset="UTF-8"
			openGraph={{
				basic: {
					title: title,
					type: "website",
					url: Astro.url.origin,
					image: Background.src
				},
				optional: {
					locale: "en-US",
				},
				image: {
					alt: `${title} banner`,
					url: Background.src,
					type: "image/webp"
				}
			}}
			twitter={{
				creator: `@${creator}`,
				card: "summary_large_image",
				site: Astro.url.origin,
				title: title,
				description: description,
				image: Background.src,
				imageAlt: `${title} banner`,
			}}
			extend={{
				link: [
				{ rel: "icon", type: "image/svg+xml", href: Logo.src },
				{ rel: "sitemap", href: "/sitemap-index.xml" },
				],
				meta: [
				{ name: "viewport", content: "width=device-width,initial-scale=1.0" },
				{ name: "theme-color", content: "#393939" },
				{ name: "keywords", content: keywords },
				{ name: "robots", content: "index, follow" },
				{ name: "language", content: "English" },
				{ name: "author", content: creator }
				]
			}}
		/>

		<AstroFont
			config={[
				{
					name: "Lato",
					src: [
					{
						style: "normal",
						weight: 400,
						path: "./public/font/Lato-Regular.ttf"
					},
					{
						style: "bold",
						weight: 700,
						path: "./public/font/Lato-Bold.ttf"
					},
					],
					preload: true,
					display: "swap",
					selector: "body",
					fallback: "sans-serif",
				}
			]}
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
